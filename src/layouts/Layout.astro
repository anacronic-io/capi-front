---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="ChatGPT-like interface" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--background: #1a1a1a;
		--text: #ffffff;
		--primary: #10a37f;
		--secondary: #2a2a2a;
		--accent: #3a3a3a;
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--background);
		color: var(--text);
	}
	body {
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
</style>